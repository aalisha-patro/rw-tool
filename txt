import React from "react";
import { Breadcrumbs as MUIBreadcrumbs, Link, Typography } from "@material-ui/core";

const Breadcrumbs = ({ breadcrumbs, onClick }) => {
  return (
    <MUIBreadcrumbs aria-label="breadcrumb">
      <Link color="inherit" onClick={() => onClick(-1)}>
        Home
      </Link>
      {breadcrumbs.map((breadcrumb, index) => (
        <Link color="inherit" onClick={() => onClick(index)} key={index}>
          {breadcrumb}
        </Link>
      ))}
      <Typography color="textPrimary">{breadcrumbs[breadcrumbs.length - 1]}</Typography>
    </MUIBreadcrumbs>
  );
};

export default Breadcrumbs;
