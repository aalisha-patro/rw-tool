const debounce = (func, delay) => {
  let timeoutId;
  return (...args) => {
    clearTimeout(timeoutId);
    timeoutId = setTimeout(() => {
      func(...args);
    }, delay);
  };
};

// ... your other code ...

const debouncedToggleFavorite = debounce(handleToggleFavorite, 300); // Adjust the delay as needed

